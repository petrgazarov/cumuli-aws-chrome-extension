{
  "manifest_version": 3,
  "name": "Cumuli AWS Console Chat",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/drawer.js"],
      "css": ["css/drawer.css"]
    }
  ],
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self'"
  },
  "permissions": ["storage", "tabs"],
  "commands": {
    "open_chat": {
      "suggested_key": "Ctrl+K",
      "description": "Open chat drawer"
    }
  }
}
